# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_TENANT_ID=your_tenant_id
AZURE_RESOURCE_GROUP=your_resource_group

# Azure OpenAI Configuration
# Note: Ensure disableLocalAuth=false on your Azure OpenAI resource to use API key authentication
# Run: az resource update --ids /subscriptions/YOUR_SUBSCRIPTION_ID/resourceGroups/YOUR_RESOURCE_GROUP/providers/Microsoft.CognitiveServices/accounts/YOUR_OPENAI_RESOURCE_NAME --set properties.disableLocalAuth=false
AZURE_OPENAI_API_KEY=your_key_here
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Azure DevOps Configuration
AZURE_DEVOPS_PAT=your_personal_access_token_here
AZURE_DEVOPS_ORG=https://dev.azure.com/your-organization

# Application Settings
PORT=8000
ENVIRONMENT=development  # development, staging, production

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_FILE_LOGGING=false
LOG_FILE_PATH=logs/app.log

# Security Settings
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Feature Flags
ENABLE_METRICS=true
ENABLE_COST_TRACKING=true

# Azure Key Vault (optional, for production)
# USE_KEY_VAULT=False
# AZURE_KEY_VAULT_NAME=your-key-vault-name

# API Configuration (if implementing a web API)
# API_HOST=0.0.0.0
# API_PORT=8000 